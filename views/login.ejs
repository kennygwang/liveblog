<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>LiveBlog Login</title>
    <link rel="stylesheet" href="./vendor/foundation/css/normalize.css">
    <link rel="stylesheet" href="./vendor/foundation/css/foundation.css">
    <link rel="stylesheet" href="./css/main.css">
  </head>

  <body>
    <div class="contain-to-grid" id="nav-bar-wrapper">
      <nav class="top-bar" data-topbar role="navigation">
        <ul class="title-area">
          <li class="name">
            <h1><a href="./">LiveBlog&#8482;</a></h1>
          </li>
        </ul>
      </nav>
    </div>
    <form class="login-form" role="form" method="POST" action="/login">
        <div class="row">
          <div class="column">
            <h1>Log In</h1>
          </div>
          <div class="small-12 column">
            <input type="text" placeholder="Email" name="username"/>
          </div>
        </div>
        <div class="row">
          <div class="small-12 column">
            <input type="password" placeholder="Password" name="password"/>
          </div>
        </div>

        <div class="row">
          <div class="small-12 column">
            <input type="submit" class="lb-button" value="Log in" />
          </div>
        </div>

        <div class="row">
            <div class="column">
              <p>Don't have an account? <a href="/register">sign me up</a></p>
            </div>
          </div>

      </form>
      
      <div class="menu-ring"></div>

    <script src="./vendor/jquery/dist/jquery.min.js"></script>
    <script src="./vendor/angular/angular.min.js"></script>
    <script src="./vendor/angular-route/angular-route.min.js"></script>
    <script src="./js/fancyRing.js"></script>
  </body>
</html>
