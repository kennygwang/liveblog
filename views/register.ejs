<!DOCTYPE html>
<html lang="en" ng-app="signup">
  <head>
    <meta charset="UTF-8">
    <title>LiveBlog Signup</title>
    <link rel="stylesheet" href="./vendor/foundation/css/normalize.css">
    <link rel="stylesheet" href="./vendor/foundation/css/foundation.css">
    <link rel="stylesheet" href="./css/main.css">
    <link rel="stylesheet" href="./css/validate.css">
  </head>

  <body ng-controller="RegisterController">
    <div class="contain-to-grid" id="nav-bar-wrapper">
      <nav class="top-bar" data-topbar role="navigation">
        <ul class="title-area">
          <li class="name">
            <h1><a href="./">LiveBlog&#8482;</a></h1>
          </li>
        </ul>
      </nav>
    </div>
    <form id="signup-form" name="signupForm" ng-submit="signupForm.$valid && register()" novalidate>
        <h1>Register</h1>
        <div class="row">
          <div class="small-12 column">
            <label>First name:
              <input type="text" name="firstName" ng-model="user.firstName" placeholder="Enter your first name" ng-minLength="2" ng-maxLength="32"/>
            </label>
          </div>
        </div>
        <div class="row">
          <div class="small-12 column">
            <label>Last name:
              <input type="text" name="lastName" ng-model="user.lastName" placeholder="Enter your last name" ng-minLength="2" ng-maxLength="32"/>
            </label>
          </div>
        </div>
        <div class="row">
          <div class="small-12 column">
            <label>Email:
              <input type="text" name="email" ng-model="user.email" placeholder="Enter your email address" ng-minLength="6"/>
            </label>
          </div>
        </div>
        <div class="row">
          <div class="small-12 column">
            <label>Password:
              <input type="password" name="password" ng-model="user.password" placeholder="Enter your password" ng-minLength="6" ng-maxLength="32"/>
            </label>
          </div>
        </div>

        <div role="alert">
          <span class="error" ng-show="signupForm.firstName.$error.required">
           Required!</span>
        </div>
        <div role="alert">
          <span class="error" ng-show="signupForm.lastName.$error.minlength">
            Too short!</span>
          <span class="error" ng-show="signupForm.lastName.$error.maxlength">
            Too long!</span>
        </div>

        <div class="row">
          <div class="small-12 column">
              <input type="submit" class="button right" ng-class="stateClass" value="{{submitMessage}}" ng-disabled="disableSubmit" />
          </div>
        </div>
      </form>
      <div>
        <p>Already have an account? <a href="/login">Log in!</a></p>
      </div>

    <script src="./vendor/jquery/dist/jquery.min.js"></script>
    <script src="./vendor/angular/angular.min.js"></script>
    <script src="./js/register/main.js"></script>
  </body>
</html>
